<!-- ✅ Navigation Bar -->
<nav class="navbar">
    
    <!-- ✅ Navigation Links Container -->
    <div class="nav-links">
        
        <!-- ✅ Home button - redirects to homepage -->
        <a href="/" class="btn">Home</a> |
        
        <!-- ✅ Search button - redirects to search page -->
        <a href="/search" class="btn">Search</a> |

        <!-- ✅ Dynamic content based on whether the user is logged in -->
        <% if (user) { %>
            <!-- ✅ If user is logged in, show Profile & Logout options -->
            <a href="/profile" class="btn">Profile</a> |
            <a href="/auth/logout" class="btn">Logout</a>
        <% } else { %>
            <!-- ✅ If user is NOT logged in, show Login & Register options -->
            <a href="/login" class="btn">Login</a> |
            <a href="/register" class="btn">Register</a>
        <% } %>
    </div>

    <!-- ✅ Website Logo Container -->
    <div class="nav-logo">
        <!-- ✅ Display the website logo -->
        <img src="/assets/logo.png" alt="AI Game Recommender">
    </div>

</nav>
