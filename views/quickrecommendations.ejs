<!-- ✅ Include the head section -->
<%- include('partials/head') %>

<body>
    <!-- ✅ Include the navigation bar -->
    <%- include('partials/navbar') %>

    <!-- ✅ Container for recommendations -->
    <div class="container">
        <h2>🌟 Games Recommended by AI based on your Ratings</h2>

        <!-- ✅ Display AI message if available -->
        <% if (aiMessage) { %>
            <p class="ai-message">🤖 <%= aiMessage %></p>
        <% } %>

        <!-- ✅ Recommendations Gallery -->
        <div class="recommendations-gallery">
            <% recommendations.forEach(game => { %>
                <div class="game-card">
                    <img src="<%= game.image %>" alt="<%= game.name %>">
                    <h3><%= game.name %></h3>
        
                    <!-- ✅ Reason for recommendation -->
                    <% if (game.reason) { %>
                        <p class="recommendation-reason">🤖 <%= game.reason %></p>
                    <% } %>
        
                    <!-- ✅ Extra debug info -->
                    <p class="game-meta">
                        🎮 Genre: <strong><%= game.genre || 'Unknown' %></strong><br>
                        ⏱️ Playtime: <strong>
                            <% if (game.playtime && game.playtime > 0) { %>
                                <%= game.playtime %>h
                            <% } else { %>
                                N/A
                            <% } %>
                        </strong>
                    </p>
        
                    <a href="/games/game-info/<%= game.id %>" class="btn">📜 Game Details</a>
                </div>
            <% }) %>
        </div>
        
    </div>

    <!-- ✅ Include the footer section -->
    <%- include('partials/footer') %>
</body>
</html>
